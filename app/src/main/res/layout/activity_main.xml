<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faça suas compras!"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />
    <CheckBox
        android:id="@+id/cbA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="ARROZ (R$ 2,69)"
        android:layout_below="@+id/txtTitulo"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        />
    <CheckBox
        android:id="@+id/cbL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="LEITE (R$ 5,00)"
        android:layout_below="@+id/cbA"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        />
    <CheckBox
        android:id="@+id/cbC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="LEITE (R$ 5,00)"
        android:layout_below="@+id/cbL"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        />
    <CheckBox
        android:id="@+id/cbF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="LEITE (R$ 5,00)"
        android:layout_below="@+id/cbC"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        />
    <CheckBox
        android:id="@+id/cbJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="JOÃO (R$ VALENDO NADAAA!)"
        android:layout_below="@+id/cbF"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        />
    <Button
        android:id="@+id/btTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbJ"
        android:text="Total das Compras"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <ImageView
        android:id="@+id/foto4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btTotal"
        android:layout_marginTop="50dp"
        android:foregroundGravity="center"
        android:src="@drawable/foto4"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>